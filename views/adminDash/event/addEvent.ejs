<!-- views/adminDash/event/addEvent.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Add Event</title>
    <!-- Include your CSS file here -->
</head>
<body>
    <h1>Add New Event</h1>

    <!-- Include a form for adding events -->
    <form action="/adminDash/event/add-event" method="post">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required>

        <label for="description">Description:</label>
        <textarea id="description" name="description" required></textarea>

        <label for="date">Date:</label>
        <input type="date" id="date" name="date" required>

        <label for="mentorName">Mentor Name:</label>
        <input type="text" id="mentorName" name="mentorName" required>

        <button type="submit">Add Event</button>
    </form>

    <!-- Include a link to go back to the list of events -->
    <a href="/adminDash/event/list-events">Back to Events</a>
</body>
</html>
